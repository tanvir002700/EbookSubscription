=form_for [@book, @review], html: {class: 'form-horizontal'} do |f|
  %fieldset
    .form-group
      %label.col-lg-2.control-label{:for => "inputEmail"} Title
      .col-lg-10
        =f.text_field :title, class: 'form-control', placeholder: 'Title'

    .form-group
      %label.col-lg-2.control-label{:for => "inputPassword"} Description
      .col-lg-10
        =f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 5

    .form-group
      %label.col-lg-2.control-label{:for => "inputPassword"} Status
      .col-lg-10
        =f.fields_for @book do |b|
          =b.select :status, Book::STATUS

    =f.hidden_field :previous_status, value: @book.status
    .form-group
      .col-lg-6
        = f.submit class: 'btn btn-primary btn-block'
      .col-lg-6
        = link_to 'Cancel', :back, class: 'btn btn-info btn-block'

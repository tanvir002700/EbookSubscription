!!!
%html
  %head
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %title
      = content_for?(:title) ? yield(:title) : 'Demo-Rails'
    %meta{name:"description", content:"#{content_for?(:description) ? yield(:description) : 'Demo'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'layouts/application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
            .span.sr-only Toggle navigation
            .span.icon-bar
            .span.icon-bar
            .span.icon-bar
          .a.navbar-brand{href: root_path} Demo
        .collapse.navbar-collapse#navbar
          %ul.nav.navbar-nav
            %li
              = link_to 'Dashboard', '#'
            %li
              = link_to 'Friends', '#'
            %li
              = link_to 'Profile', '#'
            %li
              = link_to 'Tasks', '#'
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "Update profile [examle]", '#'
            %li
              = link_to 'Sign out', '#', method: :delete
    .container-fluid
      .row
        .col-lg-3.col-md-3.col-sm-3
          .list-group.table-of-contents
            %a.list-group-item{:href => "#navbar"} Navbar
            %a.list-group-item{:href => "#buttons"} Buttons
            %a.list-group-item{:href => "#typography"} Typography
            %a.list-group-item{:href => "#tables"} Tables
            %a.list-group-item{:href => "#forms"} Forms
            %a.list-group-item{:href => "#navs"} Navs
            %a.list-group-item{:href => "#indicators"} Indicators
            %a.list-group-item{:href => "#progress-bars"} Progress bars
            %a.list-group-item{:href => "#containers"} Containers
            %a.list-group-item{:href => "#dialogs"} Dialogs
        .col-lg-9.col-md-9.col-sm-9
          %main{role: "main"}
            - flash.each do |name, msg|
              - if msg.is_a?(String)
                .alert{class: "alert-#{alert_type(name)}"}
                  .button.close{type:"button", 'data-dismiss': "alert", 'aria-hidden':"true"} Ã—
                  = content_tag :div, msg, id: "flash_#{name}"
            .container-fluid
              = yield
